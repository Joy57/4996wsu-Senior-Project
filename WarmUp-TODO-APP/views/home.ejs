<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="style.css">
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,700,500' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.css">
    <script type="text/javascript" src="js/lib/jquery-2.1.4.min.js"></script>
</head>
<body>
        
    <div id="container">


        <h1>To-Do List <i class="fa fa-caret-square-o-down"></i></h1>
        
       <form method="POST" action="/add">
        <input class="addTodo" type="text" name="text" placeholder="Type here to add">
    </form>
        <ul>
            <% list.forEach(function(item){ %>
            <li><span class="itemD" data-id="<%= item._id %>"><i data-id="<%= item._id %>" class="fa fa-trash"></i></span> <%= item.text %></li>
            <% }) %>
        </ul>
    
    </div>
    <div style="text-align:center"><a class="cssbutton" href="/logout" class="btn btn-info" role="button">Logout</a> </div>

      <script type="text/javascript" src="js/todos.js"></script>
</body>
</html>